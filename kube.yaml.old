apiVersion: apps/v1
kind: Deployment
metadata:
  name: autherntication
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      authentication: web
  template:
    metadata:
      labels:
        authentication: web
    spec:
      containers:
      - name: auth-cont
        image: auth-image
        imagePullPolicy: Never
---
apiVersion: v1
kind: Service
metadata:
  name: auth-entrypoint
  namespace: default
spec:
  type: NodePort
  selector:
    authentication: web
  ports:
  - port: 3000
    targetPort: 3000
    nodePort: 30003